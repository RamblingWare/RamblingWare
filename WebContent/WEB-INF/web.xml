<?xml version="1.0" encoding="UTF-8"?>
<web-app id="Rant" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>Rant</display-name>

	<!-- Startup the Application class on boot -->
	<listener>
		<listener-class>com.rant.config.Application</listener-class>
	</listener>

	<session-config>
		<!-- 30 minutes per session. Setting it longer takes more memory. -->
		<session-timeout>30</session-timeout>
		<!-- ID cookie per session. -->
		<cookie-config>
			<name>_id</name>
			<http-only>true</http-only>
			<secure>true</secure>
		</cookie-config>
	</session-config>

	<!-- Forward HTTP requests to HTTPS -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>All</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<!-- (1st) Filter for static content that should be cached. -->
	<filter>
		<filter-name>StaticContentFilter</filter-name>
		<filter-class>com.rant.action.filter.StaticContentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>StaticContentFilter</filter-name>
		<url-pattern>/ckeditor/*</url-pattern>
		<url-pattern>/img/*</url-pattern>
		<url-pattern>/css/*</url-pattern>
		<url-pattern>/fonts/*</url-pattern>
		<url-pattern>/js/*</url-pattern>
		<url-pattern>/favicon.ico</url-pattern>
	</filter-mapping>

	<!-- (2nd) Filter for all regular content. -->
	<filter>
		<filter-name>AllContentFilter</filter-name>
		<filter-class>com.rant.action.filter.AllContentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AllContentFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- (3rd) Filter for Struts actions -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>



</web-app>